{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://github.com/sozercan/aikit/pkg/aikit/config/inference-config",
	"$ref": "#/$defs/InferenceConfig",
	"$defs": {
		"InferenceConfig": {
			"properties": {
				"apiVersion": {
					"type": "string"
				},
				"debug": {
					"type": "boolean"
				},
				"runtime": {
					"type": "string"
				},
				"backends": {
					"items": {
						"type": "string"
					},
					"type": "array"
				},
				"models": {
					"items": {
						"$ref": "#/$defs/Model"
					},
					"type": "array"
				},
				"config": {
					"type": "string"
				}
			},
			"additionalProperties": false,
			"type": "object",
			"required": [
				"apiVersion",
				"debug",
				"runtime",
				"backends",
				"models",
				"config"
			]
		},
		"Model": {
			"properties": {
				"name": {
					"type": "string"
				},
				"source": {
					"type": "string"
				},
				"sha256": {
					"type": "string"
				},
				"promptTemplates": {
					"items": {
						"$ref": "#/$defs/PromptTemplate"
					},
					"type": "array"
				}
			},
			"additionalProperties": false,
			"type": "object",
			"required": [
				"name",
				"source",
				"sha256",
				"promptTemplates"
			]
		},
		"PromptTemplate": {
			"properties": {
				"name": {
					"type": "string"
				},
				"template": {
					"type": "string"
				}
			},
			"additionalProperties": false,
			"type": "object",
			"required": [
				"name",
				"template"
			]
		}
	}
}
